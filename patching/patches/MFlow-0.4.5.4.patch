+newFlow=  do
+        TOD t _ <- getClockTime
+        atomically $ do 
+                    NFlow n <- readDBRef rflow `onNothing` return (NFlow 0)
+                    writeDBRef rflow . NFlow $ n+1
+                    return . SB.pack . show $ t + n
