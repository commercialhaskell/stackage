+paranoidEncryptCookie :: CookieT -> IO Cookie
+paranoidEncryptCookie (a,b,c,d) = do
+  key1 <- getKey "CookieKey1.key"
+  key2 <- getKey "CookieKey2.key"
+  key3 <- getKey "CookieKey3.key"
+  key4 <- getKey "CookieKey4.key"
